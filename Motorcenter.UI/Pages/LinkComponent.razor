@using Motorcenter.UI.Models.Link

﻿@if (LinkOption is not null)
{
    <button class="btn btn-link text-start text-decoration-none py-0 @(LinkOption.IsSelected ? "ps-0" : "ps-3")" @oneclick="Oneclick">
        @if (LinkOption.IsSelected)
        {
            <i class="bi-caret-right"></i>
        }
        @LinkOption?.Name
    </button>
}

@code {
    [Parameter] public LinkOption? LinkOption { get; set; }

}
