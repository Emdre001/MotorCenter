@using Motorcenter.UI.Models.Link
<aside id="aside-menu"
       class="d-flex flex-column m-2 ms-0 mt-0 p-2 pt-0 bg-light vh-100"
       style="min-width:160px; max-width:200px;">

    @foreach (var group in CaregoryLinkGroups)
    {
        <LinkMainComponent LinkGroup="group" OnAsideCall="OnAsideCallback" />
    }

</aside>
 

@code {

    [Parameter] public EventCallback OnChange { get; set; }
    void OnAsideCallback(int id )
    {
        if (OnChange.HasDelegate)
        {

            OnChange.InvokeAsync();

        }
    }


    List<LinkGroup> CaregoryLinkGroups { get; set; } = new()
    {
          new LinkGroup()
          {
             Name = "Meny",
             LinkOption= new()
             {
                 new LinkOption { Id  = 1, Name = "Car", IsSelected = true },
                 new LinkOption { Id = 2, Name = "Motorcycle", IsSelected = false },
             
             }
          }
    };

}
