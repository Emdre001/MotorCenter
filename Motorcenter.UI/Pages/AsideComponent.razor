@using Motorcenter.UI.Models.Link
<aside id="aside-menu"
       class="d-flex flex-column m-2 ms-0 mt-0 p-2 pt-0 bg-warning  vh-100"
       style="min-width:160px; max-width:200px;">

    @foreach (var group in CaregoryLinkGroups)
    {
        <linkMainComponent LinkGroup="Group" />
    }

</aside>
 

@code {
    List<LinkGroup> CaregoryLinkGroups { get; set; } = new()
    {
          new LinkGroup()
          {
             Name = "Category",
             LinkOption= new()
             {
                 new LinkOption { Id  = 1, Name = "Car", IsSelected = true },
                 new LinkOption { Id = 2, Name = "Motorcycle", IsSelected = false },
             
             }
          }
    };

}
